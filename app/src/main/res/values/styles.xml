<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkGray</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/colorGray</item>

        <item name="android:itemBackground">@color/colorDarkGray</item>

        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="fontFamily">@font/helveticaneue</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorDarkDarkGray</item>
        <item name="colorAccent">@color/colorError</item>
        <item name="backgroundTint">@color/colorDarkDarkGray</item>
        <item name="fontFamily">@font/helveticaneue</item>

        <!--<item name="android:background">@color/colorDarkGray</item>-->
    </style>

    <style name="ChangePinAlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorSilver</item>
        <item name="colorAccent">@color/colorError</item>
        <item name="backgroundTint">@color/colorSilver</item>
        <item name="android:background">@color/colorDarkGray</item>
        <item name="fontFamily">@font/helveticaneue</item>
        <item name="font">@font/helveticaneue</item>

        <item name="textAppearanceSmallPopupMenu">@style/MyTextAppearance</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/helveticaneue</item>
    </style>

</resources>
