<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pendingItemCardViewID"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorDarkDarkGray"
        card_view:cardElevation="0dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/pending_update_user_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="1"
                android:gravity="center"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/pending_update_user_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/pending_update_user_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/pending_update_user_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:maxLines="1"
                android:gravity="center"
                android:textColor="@color/colorWhite"/>

            <ImageView
                android:id="@+id/button_delete_pending_item"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_delete_forever_black_24dp"
                android:scaleType="fitCenter" />

    </LinearLayout>


</android.support.v7.widget.CardView>